{
  "name": "sveltemplate",
  "version": "1.0.0",
  "author": "Kota Yatagai <kota@yatagai.com>",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "format": "run-s format:eslint format:prettier format:stylelint",
    "format:eslint": "eslint --fix",
    "format:prettier": "prettier '**/*.{js,jsx,ts,tsx,vue}' --write",
    "format:stylelint": "stylelint '**/*.{css,scss,sass}'"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^7.0.0",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "prettier '**/*.{js,jsx,ts,tsx,vue}' --write"
    ],
    "*.scss": [
      "stylelint '**/*.{css,scss,sass}'"
    ]
  }
}
